<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project1.TripSummaryPage"
             Title="">
    <VerticalStackLayout Padding="10" Spacing="20">
        <Label 
            Text="Trip Summary"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" TextColor="LimeGreen"/>

        <Label 
            Text="{Binding TripDuration}"
            FontSize="18"
            FontAttributes="Bold"
            Margin="10,0,0,0" BackgroundColor="LimeGreen"/>

        <Label 
            Text="{Binding TripScore}"
            FontSize="18"
            FontAttributes="Bold"
            Margin="10,0,0,0" BackgroundColor="LimeGreen"/>

        <Label 
            Text="Exceeding Speed Violations"
            FontSize="18"
            FontAttributes="Bold"
            Margin="10,0,0,0" BackgroundColor="LimeGreen"/>

        <CollectionView ItemsSource="{Binding ExceedingSpeedRecords}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm:ss}'}" />
                        <Label Text="{Binding Speed, StringFormat='{0} km/h'}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Back to main"
                BackgroundColor="LimeGreen"
                TextColor="White"
                Margin="0,10,0,0"
                HeightRequest="70"
                WidthRequest="300"
                FontSize="30"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
