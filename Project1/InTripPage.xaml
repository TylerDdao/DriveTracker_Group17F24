<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InTrip.InTripPage">

    <StackLayout Padding="10">

        <!-- Display Latitude -->
        <Label Text="Latitude:" FontSize="20" />
        <Label x:Name="LatitudeText" FontSize="20" />

        <!-- Display Longitude -->
        <Label Text="Longitude:" FontSize="20" />
        <Label x:Name="LongitudeText" FontSize="20" />

        <!-- Display Current Speed -->
        <Label Text="Current Speed:" FontSize="20" />
        <Label x:Name="CurrentSpeedLabel" FontSize="20" />

        <!-- Display Speed Limit -->
        <Label Text="Speed Limit:" FontSize="20" />
        <Label x:Name="SpeedLimitLabel" FontSize="20" />

        <!-- End Trip Button -->
        <Button Text="End Trip" Clicked="OnEndTripButtonClicked" />

    </StackLayout>
</ContentPage>
