<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InTrip.InTripPage"
             Title="TripPage">
    <VerticalStackLayout>
        <StackLayout Margin="2" Spacing="50" BackgroundColor="Aquamarine">
            <Label Text="Current Speed:" FontSize="Large"  />
            <Label x:Name="CurrentSpeedLabel" FontSize="Large" Text="-- km/h" />

            <Label Text="Speed Limit:" FontSize="Large" />
            <Label x:Name="SpeedLimitLabel" FontSize="Large" Text="Unknown" />
            <Label Text=" Latitude: " x:Name="LatitudeText"/>
            <Label Text=" Longitude: " x:Name="LongitudeText"/>

            
        </StackLayout>
        <StackLayout Margin="100" Spacing="10">
            <Button   WidthRequest="250" 
                      HeightRequest="80" 
                      Text="End Trip" 
                      Clicked="OnEndTripButtonClicked" 
                      BackgroundColor="DarkRed"
                      FontSize="Large"/>
        </StackLayout>
                     
    </VerticalStackLayout>
</ContentPage>